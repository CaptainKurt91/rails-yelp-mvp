<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <%= link_to restaurant.title, restaurant_path(restaurant)%>
    <%=
      link_to 'Delete', restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
     %>
  </li>
  <% end %>
</ul>

<p><%= link_to 'Add new restaurant', new_restaurant_path %></p>
